# Twitch
TWITCH_CHANNEL=your_channel
TWITCH_STREAM_KEY=live_xxxxx

# Game
GAME_BOT_NAME=Claude46              # which bot to control (must exist in bots/)
BOT_PASSWORD=yourpassword           # bot account password (from bots/<name>/bot.env)
BOT_SERVER=rs-sdk-demo.fly.dev      # game server hostname
GAME_CLIENT_URL=https://rs-sdk-demo.fly.dev   # browser URL to display on stream

# Timing
CHAT_INTERVAL_MS=300000             # 5 minutes between Claude cycles
CLAUDE_TIMEOUT_MS=240000            # 4 minute max per Claude invocation

# Claude
CLAUDE_MAX_TURNS=10                 # limit actions per cycle
CLAUDE_ALLOWED_TOOLS=mcp__rs-agent__execute_code,mcp__rs-agent__list_bots

# Video (set to false to run without streaming, e.g. for testing)
ENABLE_VIDEO=true
